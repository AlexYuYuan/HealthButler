    <FrameLayout
        android:id="@+id/statistics_layout"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="220dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_date"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <fragment
            android:id="@+id/statistics_frag"
            android:name="com.example.health_butler.TotalIngestionFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/breakfastColumn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/statistics_layout"
        app:layout_constraintVertical_bias="0.114">

        <LinearLayout
            android:id="@+id/breakfast"
            android:layout_width="340dp"
            android:layout_height="60dp"
            android:background="#fff"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_baseline_free_breakfast_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:text="早餐"
                android:textColor="#000"
                android:textSize="25dp" />

            <ImageView
                android:id="@+id/addBreakfast"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="170dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_baseline_add_circle_outline_24" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/breakfast_foodList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lunchColumn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/breakfastColumn"
        app:layout_constraintVertical_bias="0.148">

        <LinearLayout
            android:id="@+id/lunch"
            android:layout_width="340dp"
            android:layout_height="60dp"
            android:background="#fff"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_baseline_fastfood_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:text="午餐"
                android:textColor="#000"
                android:textSize="25dp" />

            <ImageView
                android:id="@+id/addLunch"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="170dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_baseline_add_circle_outline_24" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dinnerColumn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lunchColumn"
        app:layout_constraintVertical_bias="0.231">

        <LinearLayout
            android:id="@+id/dinner"
            android:layout_width="340dp"
            android:layout_height="60dp"
            android:background="#fff"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_baseline_rice_bowl2_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:text="晚餐"
                android:textColor="#000"
                android:textSize="25dp" />

            <ImageView
                android:id="@+id/addDinner"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="170dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_baseline_add_circle_outline_24" />

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>